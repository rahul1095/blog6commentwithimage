<p id="notice"><%= notice %></p>
<% if params[:search].present? || params[:category].present?%>
   <%= @projects.count %> Results found.
   <% else %>
   no result found
  <% end %>
<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Document</th>
       <th>category</th>
        <th>status</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
         <td><%= project.status%></td>
        <% if project.document.present? %>
          <td>
      <a href="<%=project.document.url %>"><%=  project.document.file.original_filename %></a>
   </td>

        <td>
        <%if project.category_id.present? %>
            <%=Category.find(project.category_id).name %>
            </td>
        <% end %>
        
      <%end%>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

