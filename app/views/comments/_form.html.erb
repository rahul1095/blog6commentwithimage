<%= form_for([@project, @project.comments.build],:remote => true) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>

  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image,:class=>"img-responsive" %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>

   <p>
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </p>
<% end %>