<%= form_for(project) do |f| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :document %>
    <%= f.file_field :document %></div>
  </div>

  <%= f.select(:category_id, Category.all.collect {|u| [u.name, u.id]},:prompt => 'Select Category') %><br></br>

<%=f.select "status", options_for_select([ "Avalable", "pending" ,"complete"], "complete"),:prompt => 'Select Status'=%></br></br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
